<body>

    <p>
        <a asp-action="Create">Create New</a>
    </p>

    <table class="table">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.ProductName)</th>
                <th>@Html.DisplayNameFor(model => model.Category)</th>
                <th>@Html.DisplayNameFor(model => model.IsAvailable)</th>
                <th>@Html.DisplayNameFor(model => model.Price)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="rounded-row">
                    <td>@Html.DisplayFor(modelItem => item.ProductName)</td>
                    <td>@Html.DisplayFor(modelItem => item.Category)</td>
                    <td>@Html.DisplayFor(modelItem => item.IsAvailable)</td>
                    <td>@Html.DisplayFor(modelItem => item.Price)</td>
                    <td class="actions">

                        <a asp-action="Edit" asp-route-id="@item.ProductId" class="action-button edit-button">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.ProductId" class="action-button details-button">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.ProductId" class="action-button delete-button">Delete</a>
                    </td>

                    <style>
                        .actions {
                            text-align: center;
                        }

                        .action-button {
                            display: inline-block;
                            margin: 0 5px;
                            padding: 5px 10px;
                            border-radius: 5px;
                            text-decoration: none;
                            color: white;
                            font-size: 14px;
                        }

                        .edit-button {
                            background-color: #007bff;
                        }

                            .edit-button:hover {
                                background-color: #0056b3;
                            }

                        .details-button {
                            background-color: #28a745;
                        }

                            .details-button:hover {
                                background-color: #218838;
                            }

                        .delete-button {
                            background-color: #dc3545;
                        }

                            .delete-button:hover {
                                background-color: #c82333;
                            }
                    </style>
                </tr>
            }
        </tbody>
    </table>
</body>
</html