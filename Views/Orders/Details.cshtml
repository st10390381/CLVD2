@model KHCrafts.Models.Order

@{
    ViewData["Title"] = "Details";
    var orderHistory = ViewData["OrderHistory"] as List<KHCrafts.Models.Order>;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Your Application Name</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        .details-container {
            margin-top: 20px;
        }

        .details-header {
            background-color: #f8f9fa;
            padding: 15px;
            border-radius: 5px;
            margin-bottom: 20px;
        }

        .details-body {
            background-color: #ffffff;
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .details-row {
            margin-bottom: 15px;
        }

            .details-row dt {
                font-weight: bold;
            }
    </style>
</head>
<body>
    <div class="details-container container">
        <div class="details-header text-center">
            <h1>Order Details</h1>
        </div>

        <div class="details-body">
            <h4>Order</h4>
            <hr />
            <dl class="row">
                <div class="details-row col-md-6">
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.TotalAmount)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.TotalAmount)
                    </dd>
                </div>
                <div class="details-row col-md-6">
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.OrderDate)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.OrderDate)
                    </dd>
                </div>
                <div class="details-row col-md-6">
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.Product)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Product.ProductId)
                    </dd>
                </div>
                <div class="details-row col-md-6">
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.Customer)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Customer.CustomerId)
                    </dd>
                </div>
            </dl>
        </div>

        <div class="text-center">
            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.OrderId">Edit</a>
            <a class="btn btn-secondary" asp-action="Index">Back to List</a>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>